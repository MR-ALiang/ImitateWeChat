<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <include layout="@layout/include_toobar"/>
    
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="25px"
        android:paddingRight="25px">
        <!--昵称-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="45px">
            <!--垂直方向,为的是文字和线条布局-->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="25px"
                    android:paddingRight="25px">
                    <TextView
                        android:layout_width="120px"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black0"
                        android:textSize="28px"
                        android:text="@string/nickname"/>

                    <EditText
                        android:id="@+id/etNick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="例如: 流风"
                        android:textColor="@color/gray3"
                        android:textSize="28px"/>
                </com.zhy.autolayout.AutoLinearLayout>
                <View
                    android:id="@+id/vLineNick"
                    style="@style/Line" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <!--国家地区-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="25px"
                android:textColor="@color/black0"
                android:text="@string/area"
                android:textSize="28px"/>
            <TextView
                android:id="@+id/tvArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25px"
                android:text="@string/country"
                android:textColor="@color/green1"
                android:textSize="28px"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View style="@style/Line"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center_vertical"
            android:paddingLeft="25px"
            android:paddingRight="25px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAreaCode"
                android:layout_width="120px"
                android:text="+86"
                android:textSize="28px"
                android:textColor="@color/black0"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="你的手机号码"
                android:inputType="phone"
                android:textColor="@color/gray3"
                android:textSize="28px"
                android:text="" />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:id="@+id/vLinePhone"
            style="@style/Line"/>
        <!--密码-->
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:gravity="center_vertical"
                android:paddingLeft="25px"
                android:paddingRight="25px"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:textSize="28px"
                    android:text="密码"
                    android:textColor="@color/black0"/>
                <EditText
                    android:id="@+id/etPwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60px"
                    android:background="@null"
                    android:hint="填写密码"
                    android:text=""
                    android:inputType="textPassword"
                    android:textColorHint="@color/gray3"
                    android:textSize="28px"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <ImageView
                android:id="@+id/ivSeePwd"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:src="@drawable/ic_see_pwd"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <View android:id="@+id/vLinePwd"
            style="@style/Line" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center_vertical"
            android:paddingLeft="25px"
            android:paddingRight="25px"
            android:orientation="horizontal">
            <TextView
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textSize="28px"
                android:textColor="@color/black0"/>
            <EditText
                android:id="@+id/etVerifyCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColorHint="@color/gray3"
                android:textSize="28px"/>

            <Button
                android:id="@+id/btnSendCode"
                android:layout_width="200px"
                android:layout_height="70px"
                android:text="发送验证码"
                android:textColor="@color/white"
                android:background="@drawable/selector_register_send_code"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:id="@+id/vLineVertifyCode"
            style="@style/Line" />
           <Button
               android:layout_width="match_parent"
               android:layout_height="90px"
               android:layout_marginBottom="35px"
               android:layout_marginTop="40px"
               android:enabled="false"
               android:text="注册"
               android:background="@drawable/selector_login_btn"
               android:textColor="@color/selector_login_btn"
               android:textSize="30px"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>